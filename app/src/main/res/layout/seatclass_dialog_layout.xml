<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/NEUTRAL05" />
    <View
        android:id="@+id/gridTop1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7C7C7C"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnClose"/>

    <LinearLayout
        android:id="@+id/classLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/gridTop1">
        <RelativeLayout
            android:id="@+id/layoutEconomy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">
            <LinearLayout
                android:id="@+id/layoutClassEconomy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvEconomy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/economy"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/NEUTRAL05"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    />
                <TextView
                    android:id="@+id/tvPriceEconomy"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/idr_2_500_000"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/DARKBLUE04"
                    android:lineHeight="20dp"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/icCeklisEconomy"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_choice_class"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0"
                android:layout_marginTop="12dp"
                android:layout_below="@id/layoutClassEconomy"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutPremiumEconomy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">
            <LinearLayout
                android:id="@+id/layoutClassPremiumEconomy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvPremiumEconomy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/premium_economy"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/NEUTRAL05"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/tvPricePremiumEconomy"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/idr_4_500_000"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/DARKBLUE04"
                    android:lineHeight="20dp"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/icCeklisPremiumEconomy"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_choice_class"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0"
                android:layout_marginTop="12dp"
                android:layout_below="@id/layoutClassPremiumEconomy"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutBusiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">
            <LinearLayout
                android:id="@+id/layoutClassBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvBusiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/business"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/NEUTRAL05"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/tvPriceBusiness"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/idr_7_500_000"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/DARKBLUE04"
                    android:lineHeight="20dp"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/icCeklisBusiness"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_choice_class"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0"
                android:layout_marginTop="12dp"
                android:layout_below="@id/layoutClassBusiness"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutFirstClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">
            <LinearLayout
                android:id="@+id/layoutClassFirstClassy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvFirstClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_class"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/NEUTRAL05"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/tvPriceFristClass"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/idr_12_500_000"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/DARKBLUE04"
                    android:lineHeight="20dp"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/icCeklisFirstClass"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_choice_class"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0"
                android:layout_marginTop="12dp"
                android:layout_below="@id/layoutClassFirstClassy"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnSaveClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simpan"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/Btn"
        app:layout_constraintTop_toBottomOf="@id/classLayout"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>