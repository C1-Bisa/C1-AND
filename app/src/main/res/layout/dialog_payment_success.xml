<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/NEUTRAL05" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/btnTerbitkanTiket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_illustration_cart_shopping"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat"
            android:textColor="@color/DARKBLUE04"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:lineHeight="20dp"
            android:textAlignment="center"
            android:layout_marginTop="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi Pembayaran Tiket sukses!"
            android:textColor="@color/NEUTRAL05"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:lineHeight="20dp"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/btnTerbitkanTiket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terbitkan Tiket"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:lineHeight="24dp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/DARKBLUE05"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>