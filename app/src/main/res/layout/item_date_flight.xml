<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/itemCardDateFlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/DARKBLUE03"
        app:cardCornerRadius="8dp"
        app:contentPadding="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:lineHeight="20dp"
                android:text="Rabu"
                android:textColor="@color/NEUTRAL01"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:lineHeight="20dp"
                android:text="02/03/2023"
                android:textColor="@color/NEUTRAL01"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/grid2"
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:background="@color/NEUTRAL02"
        android:layout_toEndOf="@id/itemCardDateFlight"
        android:layout_centerVertical="true"
        />

</RelativeLayout>