<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.home.DetailPenerbanganFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:background="@color/DARKBLUE06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btnBack"
                android:src="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:tint="@color/NEUTRAL01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/btnBack"
                android:fontFamily="@font/poppins_medium"
                android:lineHeight="20dp"
                android:text="@string/pilihan_penerbangan"
                android:textColor="@color/NEUTRAL01"
                android:textSize="14sp" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/appBar">
        <LinearLayout
            android:id="@+id/layoutFlightDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tvFlightDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jakarta_melbourne"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp"
                android:lineHeight="24dp"
                android:textColor="@color/DARKBLUE05"/>
            <TextView
                android:id="@+id/tvFlightTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/_4h_0m"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp"
                android:lineHeight="24dp"
                android:textColor="#222222"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_border_primary_purple_one"
            android:layout_below="@id/layoutFlightDestination">
            <!--            jadwal pemberangkatan-->
            <RelativeLayout
                android:id="@+id/layoutDepartureSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                >
                <!--                tanggal dan jam keberangkatan-->
                <LinearLayout
                    android:id="@+id/layoutTimeDeparture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvTimeDeparture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_07_00"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp"
                        android:lineHeight="24dp"
                        android:textColor="@color/NEUTRAL05"/>
                    <TextView
                        android:id="@+id/tvDateDeparture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_3_maret_2023"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        android:lineHeight="24dp"
                        android:textColor="@color/NEUTRAL05"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvDepartureAirport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/soekarno_hatta_terminal_1a_domestik"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/NEUTRAL05"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/layoutTimeDeparture"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/keberangkatann"
                    android:textSize="12sp"
                    android:lineHeight="18dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/DARKBLUE03"
                    android:layout_marginTop="2dp"
                    android:textAlignment="textEnd"
                    android:layout_toEndOf="@id/layoutTimeDeparture"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View
                android:id="@+id/grid1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/NEUTRAL02"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/layoutDepartureSchedule"/>
            <!--            informasi airline/maskapai -->
            <RelativeLayout
                android:id="@+id/layoutInfoAirline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/grid1">
                <ImageView
                    android:id="@+id/imgAirline"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_airline"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/imgAirline"
                    android:layout_marginStart="8dp"
                    >
                    <TextView
                        android:id="@+id/tvAirline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/jet_air_economy"
                        android:textSize="14sp"
                        android:lineHeight="20dp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/NEUTRAL05"/>
                    <TextView
                        android:id="@+id/tvAirlineCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/jt_203"
                        android:textSize="14sp"
                        android:lineHeight="20dp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/NEUTRAL05"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/informasi"
                        android:textSize="14sp"
                        android:lineHeight="20dp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/NEUTRAL05"
                        android:layout_marginTop="16dp"/>
                    <TextView
                        android:id="@+id/tvInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/baggage_20_kg_ncabin_baggage_7_kg_nin_flight_entertainment"
                        android:textSize="14sp"
                        android:lineHeight="20dp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/NEUTRAL05" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/grid2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/NEUTRAL02"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/layoutInfoAirline"/>
            <!--            info kedatangan-->
            <RelativeLayout
                android:id="@+id/layoutArriveSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@id/grid2"
                >
                <!--                tanggal dan jam keberangkatan-->
                <LinearLayout
                    android:id="@+id/layoutTimeArrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvTimeArrive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_11_00"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp"
                        android:lineHeight="24dp"
                        android:textColor="@color/NEUTRAL05"/>
                    <TextView
                        android:id="@+id/tvDateArrive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_3_maret_2023"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14sp"
                        android:lineHeight="24dp"
                        android:textColor="@color/NEUTRAL05"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvArriveAirport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/melbourne_international_airport"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/NEUTRAL05"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/layoutTimeArrive"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kedatangann"
                    android:textSize="12sp"
                    android:lineHeight="18dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/DARKBLUE03"
                    android:layout_marginTop="2dp"
                    android:textAlignment="textEnd"
                    android:layout_toEndOf="@id/layoutTimeArrive"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp"
                android:lineHeight="24dp"
                android:textColor="@color/NEUTRAL05"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tvPriceTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tvTotal"
                android:layout_alignParentEnd="true"
                android:text="@string/idr_4_950_000_pax"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18sp"
                android:lineHeight="26dp"
                android:textAlignment="textEnd"
                android:textColor="@color/DARKBLUE04"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btnSelectFlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pilih"
            android:fontFamily="@font/poppins_medium"
            android:lineHeight="24dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/NEUTRAL01"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            style="@style/Btn"
            android:backgroundTint="@color/DARKBLUE05"
            app:layout_constraintTop_toBottomOf="@id/classLayout"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>