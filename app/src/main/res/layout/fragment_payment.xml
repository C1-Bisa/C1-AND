<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.home.PaymentFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:background="@color/DARKBLUE05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btnBack"
                android:src="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:tint="@color/NEUTRAL01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:lineHeight="20dp"
                android:text="Proses Pembayaran"
                android:textColor="@color/NEUTRAL01"
                android:textSize="14sp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/btnBack"/>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/layoutInformationPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:orientation="vertical"
        android:background="@drawable/background_border_primary_purple_three"
        app:layout_constraintTop_toBottomOf="@id/appBar">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passengers: "
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:lineHeight="20dp"
                android:textColor="@color/NEUTRAL05"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Adults, 1 Baby"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold"
                android:lineHeight="20dp"
                android:textColor="@color/DARKBLUE05"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layoutInfoSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layoutDeparture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/imgPointDeparture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_point_location" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/imgPointDeparture"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPointDeparture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:lineHeight="20dp"
                        android:text="Jakarta"
                        android:textColor="@color/NEUTRAL05"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDateDeparture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/poppins_medium"
                        android:lineHeight="18dp"
                        android:text="5 Maret 2023"
                        android:textColor="@color/NEUTRAL05"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvTimeDeparture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/poppins_medium"
                        android:lineHeight="18dp"
                        android:text="19.10"
                        android:textColor="@color/NEUTRAL05"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTotalFlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="18dp"
                    android:text="4h 0m"
                    android:textColor="@color/NEUTRAL04"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow" />
            </LinearLayout>
            <!--            point arrive-->
            <RelativeLayout
                android:id="@+id/layoutArrive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/imgPointArrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_point_location" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/imgPointArrive"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPointArrive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:lineHeight="20dp"
                        android:text="Melbourne"
                        android:textColor="@color/NEUTRAL05"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDateArrive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/poppins_medium"
                        android:lineHeight="18dp"
                        android:text="5 Maret 2023"
                        android:textColor="@color/NEUTRAL05"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvTimeArrive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/poppins_medium"
                        android:lineHeight="18dp"
                        android:text="21.10"
                        android:textColor="@color/NEUTRAL05"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/NEUTRAL03"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layoutBookingCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking Code:"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="12sp"
                    android:lineHeight="18dp"
                    android:textColor="@color/NEUTRAL05"/>
                <TextView
                    android:id="@+id/tvBookingCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="453653657"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:lineHeight="18dp"
                    android:textColor="@color/NEUTRAL05"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/layoutBookingCode">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="12sp"
                    android:lineHeight="18dp"
                    android:textColor="@color/NEUTRAL05"/>
                <TextView
                    android:id="@+id/tvSeatClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Economy"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:lineHeight="18dp"
                    android:textColor="@color/NEUTRAL05"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_alignParentEnd="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="12sp"
                    android:lineHeight="18dp"
                    android:textColor="@color/NEUTRAL05"/>
                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDR 9.850.000"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"
                    android:lineHeight="18dp"
                    android:textColor="@color/DARKBLUE05"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
<!--    pembayaran-->
    <androidx.cardview.widget.CardView
        android:id="@+id/gopay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/layoutInformationPayment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/layoutTitlePayment1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/NEUTRAL04">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gopay"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:textColor="@color/NEUTRAL01"
                    android:lineHeight="20dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expend_more"
                    android:layout_gravity="center_horizontal"
                    app:tint="@color/NEUTRAL01"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--                disini untuk expandable card view -->
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/gopay">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/layoutTitlePayment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/DARKBLUE04">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit Card"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:textColor="@color/NEUTRAL01"
                    android:lineHeight="20dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expend_more"
                    android:layout_gravity="center_horizontal"
                    app:tint="@color/NEUTRAL01"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
<!--                disini untuk expandable card view -->
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/btnBayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bayar"
            android:fontFamily="@font/poppins_medium"
            android:lineHeight="24dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/NEUTRAL01"
            style="@style/Btn"
            android:backgroundTint="@color/DARKBLUE05"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>