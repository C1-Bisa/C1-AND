<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.home.PaymentFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:background="@color/DARKBLUE04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btnBack"
                android:src="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:tint="@color/NEUTRAL01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:lineHeight="20dp"
                android:text="Proses Pembayaran"
                android:textColor="@color/NEUTRAL01"
                android:textSize="14sp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/btnBack"/>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toTopOf="@id/layoutBotton"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layoutInformationPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingTop="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:orientation="vertical"
                android:background="@drawable/background_border_primary_purple_three"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passengers: "
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:lineHeight="20dp"
                        android:textColor="@color/NEUTRAL05"/>
                    <TextView
                        android:id="@+id/tvPassenger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Adults, 1 Baby"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_bold"
                        android:lineHeight="20dp"
                        android:textColor="@color/DARKBLUE05"/>
                </LinearLayout>

<!--                untuk keberangkatan-->
                <LinearLayout
                    android:id="@+id/layoutDepartureFlight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvTitleKeberangkatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:lineHeight="20dp"
                        android:text="Keberangkatan"
                        android:textColor="@color/DARKBLUE05"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="4dp"/>
                    <RelativeLayout
                        android:id="@+id/layoutInfoScheduleDeparture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/layoutDeparture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="16dp">

                            <ImageView
                                android:id="@+id/imgPointDeparture"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/ic_point_location" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@id/imgPointDeparture"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvPointDeparture"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:lineHeight="20dp"
                                    android:text="Jakarta"
                                    android:textColor="@color/NEUTRAL05"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvDateDeparture"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:lineHeight="18dp"
                                    android:text="5 Maret 2023"
                                    android:textColor="@color/NEUTRAL05"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvTimeDeparture"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:lineHeight="18dp"
                                    android:text="19.10"
                                    android:textColor="@color/NEUTRAL05"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTotalFlight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins_medium"
                                android:lineHeight="18dp"
                                android:text="4h 0m"
                                android:textColor="@color/NEUTRAL04"
                                android:textSize="12sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow" />
                        </LinearLayout>
                        <!--            point arrive-->
                        <RelativeLayout
                            android:id="@+id/layoutArrive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="16dp">

                            <ImageView
                                android:id="@+id/imgPointArrive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/ic_point_location" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@id/imgPointArrive"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvPointArrive"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:lineHeight="20dp"
                                    android:text="Melbourne"
                                    android:textColor="@color/NEUTRAL05"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvDateArrive"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:lineHeight="18dp"
                                    android:text="5 Maret 2023"
                                    android:textColor="@color/NEUTRAL05"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvTimeArrive"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:lineHeight="18dp"
                                    android:text="21.10"
                                    android:textColor="@color/NEUTRAL05"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/NEUTRAL03"
                    />
<!--                kepulangan-->
                <LinearLayout
                    android:id="@+id/layoutReturnFlight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/tvTitleKepulangan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:lineHeight="20dp"
                        android:text="Kepulangan"
                        android:textColor="@color/DARKBLUE05"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="4dp"/>
                    <RelativeLayout
                        android:id="@+id/layoutInfoScheduleReturn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/layoutReturn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="16dp">

                            <ImageView
                                android:id="@+id/imgPointReturn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/ic_point_location" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@id/imgPointReturn"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvPointReturn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:lineHeight="20dp"
                                    android:text="Jakarta"
                                    android:textColor="@color/NEUTRAL05"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvDateReturn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:lineHeight="18dp"
                                    android:text="5 Maret 2023"
                                    android:textColor="@color/NEUTRAL05"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvTimeReturn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:lineHeight="18dp"
                                    android:text="19.10"
                                    android:textColor="@color/NEUTRAL05"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTotalFlightReturn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins_medium"
                                android:lineHeight="18dp"
                                android:text="4h 0m"
                                android:textColor="@color/NEUTRAL04"
                                android:textSize="12sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow" />
                        </LinearLayout>
                        <!--            point arrive-->
                        <RelativeLayout
                            android:id="@+id/layoutArriveReturnTrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="16dp">

                            <ImageView
                                android:id="@+id/imgPointArriveReturnTrip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/ic_point_location" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@id/imgPointArriveReturnTrip"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvPointArriveReturnTrip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:lineHeight="20dp"
                                    android:text="Melbourne"
                                    android:textColor="@color/NEUTRAL05"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvDateArriveReturnTrip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:lineHeight="18dp"
                                    android:text="5 Maret 2023"
                                    android:textColor="@color/NEUTRAL05"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvTimeArriveReturnTrip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:lineHeight="18dp"
                                    android:text="21.10"
                                    android:textColor="@color/NEUTRAL05"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/layoutBookingCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentStart="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking Code:"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="12sp"
                            android:lineHeight="18dp"
                            android:textColor="@color/NEUTRAL05"/>
                        <TextView
                            android:id="@+id/tvBookingCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="453653657"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="12sp"
                            android:lineHeight="18dp"
                            android:textColor="@color/NEUTRAL05"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/layoutBookingCode">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="12sp"
                            android:lineHeight="18dp"
                            android:textColor="@color/NEUTRAL05"/>
                        <TextView
                            android:id="@+id/tvSeatClass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Economy"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="12sp"
                            android:lineHeight="18dp"
                            android:textColor="@color/NEUTRAL05"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="12sp"
                            android:lineHeight="18dp"
                            android:textColor="@color/NEUTRAL05"/>
                        <TextView
                            android:id="@+id/tvTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IDR 9.850.000"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="12sp"
                            android:lineHeight="18dp"
                            android:textColor="@color/DARKBLUE05"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <!--    pembayaran-->
            <androidx.cardview.widget.CardView
                android:id="@+id/gopay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="4dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/layoutTitlePayment1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/NEUTRAL04">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gopay"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"
                            android:textColor="@color/NEUTRAL01"
                            android:lineHeight="20dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_expend_more"
                            android:layout_gravity="center_horizontal"
                            app:tint="@color/NEUTRAL01"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--                disini untuk expandable card view -->
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="9dp"
                app:cardCornerRadius="4dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/layoutTitlePayment2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/DARKBLUE05">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Credit Card"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"
                            android:textColor="@color/NEUTRAL01"
                            android:lineHeight="20dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            />
                        <ImageView
                            android:id="@+id/btnExpandCreditCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_expend_more"
                            android:layout_gravity="center_horizontal"
                            app:tint="@color/NEUTRAL01"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/layoutCreditCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:paddingEnd="18dp"
                        android:paddingStart="18dp">
                        <!--                disini untuk expandable card view -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Card number"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"
                            android:lineHeight="20dp"
                            android:textColor="@color/NEUTRAL05"
                            android:layout_marginTop="19dp"/>

                        <EditText
                            android:id="@+id/etNumberCreditCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="4480 0000 0000 0000"
                            android:lineHeight="20dp"
                            android:textColorHint="@color/NEUTRAL03"
                            android:textColor="@color/NEUTRAL04"
                            android:textSize="14sp"
                            tools:ignore="TouchTargetSizeCheck" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Card holder name"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"
                            android:lineHeight="20dp"
                            android:textColor="@color/NEUTRAL05"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/etHolderNameCreditCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="John Doe"
                            android:lineHeight="20dp"
                            android:textColorHint="@color/NEUTRAL03"
                            android:textColor="@color/NEUTRAL04"
                            android:textSize="14sp"
                            tools:ignore="TouchTargetSizeCheck" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="10dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CVV"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="14sp"
                                    android:lineHeight="20dp"
                                    android:textColor="@color/NEUTRAL05" />
                                <EditText
                                    android:id="@+id/etCVVCreditCard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:hint="000"
                                    android:lineHeight="20dp"
                                    android:textColorHint="@color/NEUTRAL03"
                                    android:textColor="@color/NEUTRAL04"
                                    android:textSize="14sp"
                                    tools:ignore="TouchTargetSizeCheck" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Expiry date"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="14sp"
                                    android:lineHeight="20dp"
                                    android:textColor="@color/NEUTRAL05"
                                    />
