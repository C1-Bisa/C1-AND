                            android:textSize="14sp"
                            android:lineHeight="24dp"
                            android:textColor="@color/NEUTRAL05"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvDepartureAirportReturnTrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/soekarno_hatta_terminal_1a_domestik"
                        android:textSize="14sp"
                        android:lineHeight="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/NEUTRAL05"
                        android:layout_marginTop="2dp"
                        android:layout_below="@id/layoutTimeDepartureReturnTrip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/keberangkatann"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/DARKBLUE03"
                        android:layout_marginTop="35dp"
                        android:textAlignment="textEnd"
                        android:layout_toEndOf="@id/layoutTimeDepartureReturnTrip"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:id="@+id/grid3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/NEUTRAL02"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@id/layoutDepartureScheduleReturn"/>
                <!--            informasi airline/maskapai -->
                <RelativeLayout
                    android:id="@+id/layoutInfoAirlineReturnTrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@id/grid3">
                    <ImageView
                        android:id="@+id/imgAirlineReturnTrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_airline"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/imgAirlineReturnTrip"
                        android:layout_marginStart="8dp"
                        >
                        <TextView
                            android:id="@+id/tvAirlineAndClassReturn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/jet_air_economy"
                            android:textSize="14sp"
                            android:lineHeight="20dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/NEUTRAL05"/>
                        <TextView
                            android:id="@+id/tvCodeAirlineReturn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/jt_203"
                            android:textSize="14sp"
                            android:lineHeight="20dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/NEUTRAL05"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/informasi"
                            android:textSize="14sp"
                            android:lineHeight="20dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/NEUTRAL05"
                            android:layout_marginTop="16dp"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvPassengerReturnTrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:id="@+id/grid4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/NEUTRAL02"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@id/layoutInfoAirlineReturnTrip"/>
                <!--            info kedatangan-->
                <RelativeLayout
                    android:id="@+id/layoutArriveScheduleReturnTrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:layout_below="@id/grid4"
                    >
                    <!--                tanggal dan jam keberangkatan-->
                    <LinearLayout
                        android:id="@+id/layoutTimeArriveReturnTrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvTimeArriveReturnTrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_11_00"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="16sp"
                            android:lineHeight="24dp"
                            android:textColor="@color/NEUTRAL05"/>
                        <TextView
                            android:id="@+id/tvDateArriveReturnTrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_3_maret_2023"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"
                            android:lineHeight="24dp"
                            android:textColor="@color/NEUTRAL05"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvArriveAirportReturnTrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/melbourne_international_airport"
                        android:textSize="14sp"
                        android:lineHeight="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/NEUTRAL05"
                        android:layout_marginTop="2dp"
                        android:layout_below="@id/layoutTimeArriveReturnTrip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kedatangann"
                        android:textSize="12sp"
                        android:lineHeight="18dp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/DARKBLUE03"
                        android:layout_marginTop="2dp"
                        android:textAlignment="textEnd"
                        android:layout_toEndOf="@id/layoutTimeArriveReturnTrip"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <!--        rincian harga-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="14dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@id/layoutInfoScheduleReturn">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rincian_harga"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:textColor="@color/NEUTRAL05"
                    />
                <RelativeLayout
                    android:id="@+id/layoutNumAdult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/tvNumAdult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_2_adult"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:lineHeight="20dp"
                        android:textColor="@color/NEUTRAL05"
                        android:layout_alignParentStart="true"
                        />
                    <TextView
                        android:id="@+id/tvTotalPriceAdult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/idr_9_550_000"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:lineHeight="20dp"
                        android:textColor="@color/NEUTRAL05"
                        android:layout_alignParentEnd="true"
                        />
                </RelativeLayout>
                <!--            child-->
                <RelativeLayout
                    android:id="@+id/layoutNumChild"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/tvNumChild"
                        android:layout_width="wrap_content"
