                            android:layout_height="wrap_content"
                            android:text="@string/informasi"
                            android:textSize="14sp"
                            android:lineHeight="20dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/NEUTRAL05"
                            android:layout_marginTop="16dp"/>
<!--                        recycleviewpassenger departure-->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvPassengerDepartureTrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:id="@+id/grid2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/NEUTRAL02"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@id/layoutInfoAirline"/>
                <!--            info kedatangan-->
                <RelativeLayout
                    android:id="@+id/layoutArriveSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:layout_below="@id/grid2"
                    >
                    <!--                tanggal dan jam keberangkatan-->
                    <LinearLayout
                        android:id="@+id/layoutTimeArrive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvTimeArrive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_11_00"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="16sp"
                            android:lineHeight="24dp"
                            android:textColor="@color/NEUTRAL05"/>
                        <TextView
                            android:id="@+id/tvDateArrive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_3_maret_2023"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"
                            android:lineHeight="24dp"
                            android:textColor="@color/NEUTRAL05"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvArriveAirport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Melbourne International Airport"
                        android:textSize="14sp"
                        android:lineHeight="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/NEUTRAL05"
                        android:layout_marginTop="2dp"
                        android:layout_below="@id/layoutTimeArrive"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kedatangann"
                        android:textSize="12sp"
                        android:lineHeight="18dp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/DARKBLUE03"
                        android:layout_marginTop="2dp"
                        android:textAlignment="textEnd"
                        android:layout_toEndOf="@id/layoutTimeArrive"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </RelativeLayout>
<!--            informasi untuk kepulangan-->
            <RelativeLayout
                android:id="@+id/layoutInfoScheduleReturn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_border_primary_purple_one"
                android:layout_below="@id/layoutInfoScheduleDeparture"
                android:visibility="gone">
                <!--            jadwal pemberangkatan-->
                <RelativeLayout
                    android:id="@+id/layoutDepartureScheduleReturn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    >
                    <!--                tanggal dan jam keberangkatan-->

                    <LinearLayout
                        android:id="@+id/bookingCodeReturn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_bookingCodeReturn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/booking_code"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="16sp"
                            android:lineHeight="24dp"
                            android:textColor="@color/NEUTRAL05"/>

                        <TextView
                            android:id="@+id/tvBookingCodeReturn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_45653657"
                            android:textSize="16sp"
                            android:lineHeight="24dp"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/DARKBLUE04"
                            android:textAlignment="textEnd" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layoutTimeDepartureReturnTrip"
                        android:layout_width="wrap_content"
