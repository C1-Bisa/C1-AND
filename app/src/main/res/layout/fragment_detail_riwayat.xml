<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.riwayat.DetailRiwayatFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:background="@color/DARKBLUE04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btnBack"
                android:src="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:tint="@color/NEUTRAL01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/btnBack"
                android:fontFamily="@font/poppins_medium"
                android:lineHeight="20dp"
                android:text="@string/rincian_penerbangan"
                android:textColor="@color/NEUTRAL01"
                android:textSize="14sp" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
<!--    loading untuk detail riwayat -->
    <RelativeLayout
        android:id="@+id/layoutLoadingData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/appBar"
        app:layout_constraintBottom_toTopOf="@+id/layoutTotalRincian"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/imgIllustrationLoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/img_illustration_loading" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menunggu detail riwayat penerbangan"
            android:textSize="14sp"
            android:lineHeight="20dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/NEUTRAL03"
            android:layout_marginTop="18dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imgIllustrationLoad"/>
    </RelativeLayout>
<!--    scroll view gone karena terdapat loading-->
    <ScrollView
        android:id="@+id/detaiRiwayatlScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toTopOf="@id/layoutTotalRincian"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:id="@+id/labelRincianRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg_label_riwayat"
                android:visibility="visible"
                >
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unpaid"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/NEUTRAL01"/>
            </LinearLayout>
<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:id="@+id/rvFlighInformation"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginStart="16dp"-->
<!--                android:layout_marginEnd="16dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:layout_below="@id/labelRincianRiwayat"/>-->
<!--            layout sengaja di hide-->
<!--            informasi untuk keberangkatan-->
            <RelativeLayout
                android:id="@+id/layoutInfoScheduleDeparture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_border_primary_purple_one"
                android:layout_below="@id/labelRincianRiwayat"
                android:visibility="visible">
                <!--            jadwal pemberangkatan-->
                <RelativeLayout
                    android:id="@+id/layoutDepartureSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    >
                    <!--                tanggal dan jam keberangkatan-->

                    <LinearLayout
                        android:id="@+id/bookingCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_bookingCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/booking_code"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="16sp"
                            android:lineHeight="24dp"
                            android:textColor="@color/NEUTRAL05"/>

                        <TextView
                            android:id="@+id/tvBookingCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_45653657"
                            android:textSize="16sp"
                            android:lineHeight="24dp"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/DARKBLUE04"
                            android:textAlignment="textEnd" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layoutTimeDeparture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bookingCode"
                        android:orientation="vertical">
                        <TextView
