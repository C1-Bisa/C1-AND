<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Btn" parent="Widget.Material3.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:backgroundTint">@color/DARKBLUE03</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom_sheet</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom_sheet</item>
    </style>

    <style name="SwitchStyle" parent="Theme.MaterialComponents">
        <item name="colorOnSurface">@color/DARKBLUE03</item>
        <item name="colorSecondary">@color/DARKBLUE01</item>
    </style>

</resources>